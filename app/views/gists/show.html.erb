<div class="jumbotron">
            <div class="container">
	<div class = "row">
<div class = "col-lg-4">
<p id="notice"><%= notice %></p>

<p>
  <strong>Język</strong>
  <%= @gist.lang %>
</p>
<table class="table table-striped table-condensed table-hover table-responsive">
<thead><tr>
<strong>Wrzutka:</strong>
</tr>
</thead>
<tr><td>
<%= raw Pygments.highlight(@gist.snippet, lexer: @gist.lang) %></tr></td>
</table>
<p>
  <strong>Opis:</strong>
  <%= @gist.description %>
</p>
<p>
   <strong>Autor:</strong>
   <%= @gist.autor %>
 </p>

<h2>Comments</h2>
<% @gist.comments.each do |comment| %>
  <p>
    <%= comment.commenter %>: <%= comment.body %> <%= link_to 'Destroy Comment', [comment.gist, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
  </p>
  
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@gist, @gist.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>












<div class="btn-group btn-group-xl">

<button type="button" class="btn btn-default"><%= link_to 'Edytuj', edit_gist_path(@gist) %> </button>
